<Project DefaultTargets="All" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <GetExtraInformationalVersionDependsOn>
      BeforeGetExtraInformationalVersion;
      CoreGetExtraInformationalVersion;
      AfterGetExtraInformationalVersion;
    </GetExtraInformationalVersionDependsOn>
  </PropertyGroup>

  <Target Name="GetExtraInformationalVersion" DependsOnTargets="$(GetExtraInformationalVersionDependsOn)"/>

  <!-- To be overriden by the user -->
  <Target Name="BeforeGetExtraInformationalVersion" />
  <Target Name="AfterGetExtraInformationalVersion" />

  <Target Name="CoreGetExtraInformationalVersion" />
  
</Project>
