<Project DefaultTargets="All" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <GetSvnRevisionVersionDependsOn>
      BeforeGetSvnRevisionVersion;
      CoreGetSvnRevisionVersion;
      AfterGetSvnRevisionVersion;
    </GetSvnRevisionVersionDependsOn>
  </PropertyGroup>

  <Target Name="GetSvnRevisionVersion" DependsOnTargets="$(GetSvnRevisionVersionDependsOn)"/>

  <!-- To be overriden by the user -->
  <Target Name="BeforeGetSvnRevisionVersion" />
  <Target Name="AfterGetSvnRevisionVersion" />

  <Target Name="CoreGetSvnRevisionVersion" >

    <Message Text="$(LoggingMessagePrefix) Getting the SVN revision of the current SVN repository..." Importance="high" />
    
    <Error Text="The Svn runner path was not specified" Condition="$(SvnRunnersPath) == ''" />
    <Error Text="The Svn runner path was not found" Condition="!Exists($(SvnRunnersPath))" />

    <MSBuild.Community.Tasks.Subversion.SvnVersion LocalPath="$(GlobalRootPath)" ToolPath="$(SvnRunnersPath)">
      <Output TaskParameter="Revision" PropertyName="SvnRevisionVersion" />
    </MSBuild.Community.Tasks.Subversion.SvnVersion>
    <Message Text="SVN revision found: $(SvnRevisionVersion)..." Importance="normal" />

    <!--<PropertyGroup>
      <SvnRevisionVersion>$(SVN_REVISION)</SvnRevisionVersion>
    </PropertyGroup>-->
    
  </Target>
  
</Project>
