<Project DefaultTargets="All" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <CleanTestAssembliesDirectoriesDependsOn>
      BeforeCleanTestAssembliesDirectories;
      CoreCleanTestAssembliesDirectories;
      AfterCleanTestAssembliesDirectories;
    </CleanTestAssembliesDirectoriesDependsOn>
  </PropertyGroup>

  <Target Name="CleanTestAssembliesDirectories" DependsOnTargets="$(CleanTestAssembliesDirectoriesDependsOn)" Condition="$(TestAssembliesPath) != $(BuildingPath)" />

  <!-- To be overriden by the user -->
  <Target Name="BeforeCleanTestAssembliesDirectories" />
  <Target Name="AfterCleanTestAssembliesDirectories" />

  <Target Name="CoreCleanTestAssembliesDirectories" >

    <Message Text="$(LoggingMessagePrefix) Cleaning the testing assembly directories..." Importance="high" />

    <Error ContinueOnError="false" Text="The test assemblies path was not specified" Condition="$(TestAssembliesPath) == ''" />

    <Message 
      Text="$(LoggingMessagePrefix) Removing directory: ($(TestAssembliesPath))..." 
      Importance="normal" 
      Condition="Exists($(TestAssembliesPath))" />
    <NCastor.AutoBuilder.Tasks.FileSystem.Folder.RemoveDirectoryWithRetries 
      RetryCount="$(NumberOfRetriesWhenDeletingDirectories)" 
      ContinueOnError="false" 
      Directories="$(TestAssembliesPath)" 
      Condition="Exists($(TestAssembliesPath))" />

    <MSBuild.Community.Tasks.Sleep Milliseconds="$(DelayAfterDeletingDirectories)" />

    <Message Text="$(LoggingMessagePrefix) Ensuring all the testing assembly directories were removed..." Importance="normal" />
    <Error ContinueOnError="false" Text="There was a problem when cleaning the Test assemblies directory" Condition="Exists($(TestAssembliesPath))" />

  </Target>
  
</Project>
