<Project DefaultTargets="All" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <CustomizeMSpecWithOpenCoverArgumentsDependsOn>
      BeforeCustomizeMSpecWithOpenCoverArguments;
      CoreCustomizeMSpecWithOpenCoverArguments;
      AfterCustomizeMSpecWithOpenCoverArguments;
    </CustomizeMSpecWithOpenCoverArgumentsDependsOn>
  </PropertyGroup>

  <Target Name="CustomizeMSpecWithOpenCoverArguments" DependsOnTargets="$(CustomizeMSpecWithOpenCoverArgumentsDependsOn)"/>

  <!-- To be overriden by the user -->
  <Target Name="BeforeCustomizeMSpecWithOpenCoverArguments" />
  <Target Name="AfterCustomizeMSpecWithOpenCoverArguments" />

  <Target Name="CoreCustomizeMSpecWithOpenCoverArguments" >

    <Message Text="$(LoggingMessagePrefix) Setting up MSpec and OpenCover arguments..." Importance="high" />
    
    <Error Text="The MSpec assemblies were not parsed or they were not specified" Condition="@(_MSpecAssembliesToRunCodeCoverage) == ''"/>
    <Error Text="The instrumentation assemblies were not parsed or they were not specified" Condition="@(_AssembliesToInstrumentWithOpenCoverMSpec) == ''"/>

    <PropertyGroup>
      <MSpecRunnerWithOpenCoverArguments>--xml \"$(MSpecXmlReportFilePath)\" --html \"$(MSpecHtmlReporthFilePath)\" @(_MSpecAssembliesToRunCodeCoverage, ' ')</MSpecRunnerWithOpenCoverArguments>
      <_OpenCoverMSpecCommand>-target:"$(MSPecRunner)" -targetargs:"$(MSpecRunnerWithOpenCoverArguments)"</_OpenCoverMSpecCommand>
      <OpenCoverRunnerArgumentsForMSpec>-targetdir:"$(TestAssembliesPath)" -mergebyhash -register -returntargetcode -filter:"@(_AssembliesToInstrumentWithOpenCoverMSpec, ' ')" -output:"$(OpenCoverMSpec_ReportFilePath)" $(_OpenCoverMSpecCommand)</OpenCoverRunnerArgumentsForMSpec>
    </PropertyGroup>

  </Target>
  
</Project>
