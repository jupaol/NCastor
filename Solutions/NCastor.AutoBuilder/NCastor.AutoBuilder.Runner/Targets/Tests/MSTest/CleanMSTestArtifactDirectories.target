<Project DefaultTargets="All" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <CleanMSTestArtifactDirectoriesDependsOn>
      BeforeCleanMSTestArtifactDirectories;
      CoreCleanMSTestArtifactDirectories;
      AfterCleanMSTestArtifactDirectories;
    </CleanMSTestArtifactDirectoriesDependsOn>
  </PropertyGroup>

  <Target Name="CleanMSTestArtifactDirectories" DependsOnTargets="$(CleanMSTestArtifactDirectoriesDependsOn)"/>

  <!-- To be overriden by the user -->
  <Target Name="BeforeCleanMSTestArtifactDirectories" />
  <Target Name="AfterCleanMSTestArtifactDirectories" />

  <Target Name="CoreCleanMSTestArtifactDirectories" >

    <Message Text="$(LoggingMessagePrefix) Cleaning all the MSTest artifact directories..." Importance="high" />
    
    <Error ContinueOnError="false" Text="The MSTest results path was not specified" Condition="$(MSTestResultsPath) == ''" />

    <Message 
      Text="$(LoggingMessagePrefix) Removing directory: ($(MSTestResultsPath))..." 
      Importance="normal" 
      Condition="Exists($(MSTestResultsPath))" />
    <NCastor.AutoBuilder.Tasks.FileSystem.Folder.RemoveDirectoryWithRetries 
      RetryCount="$(NumberOfRetriesWhenDeletingDirectories)" 
      ContinueOnError="false" 
      Directories="$(MSTestResultsPath)" 
      Condition="Exists($(MSTestResultsPath))" />

    <MSBuild.Community.Tasks.Sleep Milliseconds="$(DelayAfterDeletingDirectories)" />

    <Message Text="$(LoggingMessagePrefix) Ensuring all the MSTest artifact directories were removed..." Importance="normal" />
    <Error ContinueOnError="false" Text="There was a problem when cleaning the MSTest reports directory" Condition="Exists($(MSTestResultsPath))" />

  </Target>
  
</Project>
