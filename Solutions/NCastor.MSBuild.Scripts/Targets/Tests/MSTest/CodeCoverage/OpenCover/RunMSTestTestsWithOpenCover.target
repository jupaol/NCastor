<?xml version="1.0" encoding="utf-8" ?>

<Project DefaultTargets="All" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <RunMSTestTestsWithOpenCoverDependsOn>
      SettingMSTestTestingAssemblies;
      SettingInstrumentationAssemblies;
      CleanMSTestArtefactFolders;
      CreateMSTestArtefactFolders;
      BeforeRunMSTestTestsWithOpenCover;
      CoreRunMSTestTestsWithOpenCover;
      AfterRunMSTestTestsWithOpenCover;
      CreateMSTestReport;
      ReportMSTestOpenCoverWithReportGenerator;
    </RunMSTestTestsWithOpenCoverDependsOn>
  </PropertyGroup>

  <Target Name="RunMSTestTestsWithOpenCover" DependsOnTargets="$(RunMSTestTestsWithOpenCoverDependsOn)"/>

  <!-- To be overriden by the user -->
  <Target Name="BeforeRunMSTestTestsWithOpenCover" />
  <Target Name="AfterRunMSTestTestsWithOpenCover" />

  <Target Name="CoreRunMSTestTestsWithOpenCover" >

    <Error ContinueOnError="false" Text="The MSTest results file was not specified" Condition="$(MSTestReportFilePath) == ''"></Error>
    <Error ContinueOnError="false" Text="The MSTest runner was not specified" Condition="$(MSTestRunner) == ''"></Error>
    <Error ContinueOnError="false" Text="The MSTest runner was not found" Condition="!Exists($(MSTestRunner))"/>
    <Error ContinueOnError="false" Text="The MSTest containers were not specified" Condition="@(MSTestContainers) == ''"></Error>
    <Error ContinueOnError="false" Text="The MSTest dll was not found: &quot;%(MSTestContainers.Identity)&quot;" Condition="!Exists(%(MSTestContainers.Identity))" />

    <ItemGroup>
      <_MSTestContainersToRunCodeCoverage Include="@(MSTestContainers->'/testcontainer:\&quot;%(Identity)\&quot;')" />
      <_AssembliesToInstrumentWithOpenCoverMSTest Include="@(AssembliesToInstrument->'+[%(FileName)]*')" />
    </ItemGroup>

    <PropertyGroup>
      <_OpenCoverMSTestCommand>-target:"$(MSTestRunner)"  -targetargs:"@(_MSTestContainersToRunCodeCoverage, ' ') /detail:errormessage /detail:errorstacktrace /detail:stderr /resultsfile:\"$(MSTestReportFilePath)\""</_OpenCoverMSTestCommand>

      <_CommonOpenCoverArgs>&quot;$(OpenCoverRunner)&quot; -targetdir:&quot;$(TestAssembliesPath)&quot; -mergebyhash -register:user -returntargetcode -filter:&quot;@(_AssembliesToInstrumentWithOpenCoverMSTest, ' ')&quot; -output:&quot;$(OpenCoverMSTest_ReportFilePath)&quot;</_CommonOpenCoverArgs>
    </PropertyGroup>

    <Exec ContinueOnError="true" Command="$(_CommonOpenCoverArgs) $(_OpenCoverMSTestCommand)">
      <Output TaskParameter="exitcode" ItemName="ErrorsOcurredWhenRunningMSTestTests"/>
    </Exec>

  </Target>
  
</Project>
