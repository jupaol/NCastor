<?xml version="1.0" encoding="utf-8" ?>

<Project DefaultTargets="All" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <ReportNUnitOpenCoverWithReportGeneratorDependsOn>
      CleanReportNUnitOpenCoverWithReportGeneratorArtefacts;
      CreateReportNUnitOpenCoverWithReportGeneratorArtefacts;
      BeforeReportNUnitOpenCoverWithReportGenerator;
      CoreReportNUnitOpenCoverWithReportGenerator;
      AfterReportNUnitOpenCoverWithReportGenerator;
    </ReportNUnitOpenCoverWithReportGeneratorDependsOn>
  </PropertyGroup>

  <Target Name="ReportNUnitOpenCoverWithReportGenerator" DependsOnTargets="$(ReportNUnitOpenCoverWithReportGeneratorDependsOn)"/>

  <!-- To be overriden by the user -->
  <Target Name="BeforeReportNUnitOpenCoverWithReportGenerator" />
  <Target Name="AfterReportNUnitOpenCoverWithReportGenerator" />

  <Target Name="CoreReportNUnitOpenCoverWithReportGenerator" >

    <Error ContinueOnError="false" Text="The report generator runner was not specified" Condition="$(ReportGeneratorRunner) == ''" />
    <Error ContinueOnError="false" Text="The report generator runner was not found" Condition="!Exists($(ReportGeneratorRunner))" />

    <Exec ContinueOnError="false" Command='"$(ReportGeneratorRunner)" "$(OpenCoverNUnit_ReportFilePath)" "$(ReportGeneratorNUnitReportPath)"' />

  </Target>
  
</Project>
